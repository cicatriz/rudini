<div class="item" id="item-<%= item.id %>" style="display: none;" data-title="<%= item.name %>" data-id="<%= item.id %>" data-rudinpg="<%= item.item_info[:rudin_pg] %>" data-rudineq="<%= item.item_info[:rudin_eq] %>" data-rudinch="<%= item.item_info[:rudin_ch]%>" data-rudinsec="<%= item.item_info[:rudin_section] %>" data-lectureid="<%= item.item_info[:lecture_id] %>" data-lecturename="<%= item.item_info[:lecture_name] %>" >

  <h2><span style="vertical-align: 13%; margin-right: 1em;" class="label" ><%= item.label %></span><%= item.name %></h2>
  <p><%= simple_format item.content %></p>

  <div class="item-button-panel">
    <a class="play-btn btn btn-small btn-info" data-videoid="<%= item.video_id %>" data-start="<%= item.video_time %>" data-end="<%= item.video_end %>" href="#"><i class="icon-play icon-white"></i> Watch!</a>
    <% if user_signed_in? %>
      <%= render :partial => 'spaceable_memories/study_button', :locals => { :item => item } %>
    <% end %> 
  </div>
</div>
