<div class="row main-page">
  <div class="span4" id="navigation-sidebar">
    <div class="sidebar-nav">

      <div id="search-header">
        <input class="input focused" id="search-box" name="search" type="text" autocomplete="off" value="" placeholder="Type a definition or theorem">
      </div>
      <ul class="nav nav-list">
        <% @items.each do |item| %>
          <li id="nav-item-<%= item.id %>" ><a href="#" id="nav-link-<%= item.id %>"><%= item %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="span8" id="main-column">
    <div id="quiz-container" class="quiz-container">
    </div>
    <div class="item-container">
      <div class="item" id="item-none">
        <% if current_user && current_user.due_memories.count > 0 %>
          <p>You have items to study!
          <%= link_to "Study now", "#", :class => 'study-initiate btn' %></p>
        <% else %>
          <p>Search for an item on the left!</p>
        <% end %>
      </div>
      <%= render @items %>
    </div>
    <div class="video-container well hidden">
      <div id="video" style="width: 420px; height: 315px; margin: auto;"></div>
    </div>

  </div>
</div>
